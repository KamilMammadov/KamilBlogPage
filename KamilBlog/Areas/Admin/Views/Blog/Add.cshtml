@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using KamilBlog.Areas.Admin.ViewModels
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Blogs</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-blog-add">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                       
                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>ContentName</label>
                            <input asp-for="ContentName" class="form-control">
                            <span asp-validation-for="ContentName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea asp-for="Content" class="form-control" id="message" placeholder="Enter your message here..." style="height: 12rem" data-sb-validations="required"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>

                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>