@using KamilBlog.Areas.Admin.ViewModels
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a target="_blank" class="btn btn-secondary">Add new Blog</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Blogs</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>ContentName</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>@blog.Name</td>
                                <td>@blog.ContentName</td>
                                <td>@blog.CreadetAt.ToString("dd/mm/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-book-update" asp-route-id="@blog.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-book-delete" asp-route-id="@blog.Id" id="book-form-@blog.Id"></form>
                                    <button type="submit" form="book-form-@blog.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>